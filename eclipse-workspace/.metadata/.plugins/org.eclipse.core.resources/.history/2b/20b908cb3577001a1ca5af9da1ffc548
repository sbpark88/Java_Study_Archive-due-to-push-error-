import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;

public class lecture1 {
	public static void main(String[] args) {
		

		
	
		
		// 사용자로부터 값 10개를 입력 받아 배열로 만들고 합 구하기.
		Scanner s = new Scanner(System.in);
		
		System.out.println("정수 10개를 입력하겠습니다.");
		
		int[] arr2 = new int[10];		// 공간을 미리 만들어줘야한다.
		int arrSum = 0;
		
		
		for (int i = 0; i < arr2.length; i++) {
			System.out.println((i+1) + "번째 숫자를 입력해주세요.");
			arr2[i] = s.nextInt();
			arrSum += arr2[i];
		}

		System.out.println(arrSum);
		
		
		
		
		// .toString 사용
		int arr3[] = {34,12,1,6,65,28,10};
		
		System.out.println(Arrays.toString(arr3));
		
		
		// foreach 사용 
		for (int value:arr2) {		// arr2에 있는 배열에 하나씩 접근해서 하나씩 빼
			System.out.println(value);
		}
		
		
		
		
		
		
		
//		// 0~100까지 임의의 수를 30개 발생시켜 배열에 넣은 후 정렬하세요.
//		
//		Random r = new Random();
//		
//		int under100 = r.nextInt(100);
		
		
		
		
		
		
		
		
	}

}
