import java.util.Random;
import java.util.Scanner;

public class homwork27thMarch {
	public static void main(String[] args) {
				
		System.out.println("가위는 0, 바위는 1, 보는 2를 입력해주세요.");
		
		Random r = new Random();
		Scanner s = new Scanner(System.in);
		
//		String you = s.next();
		String you = "scissors";
		
		System.out.println(you);
		
		int yourNum = 0;
		int computer = r.nextInt(3);
		
		if (you == "scissors") {
			System.out.println("KKKKK");
		}
		
		if (you == "scissors") {
			yourNum = 0;
			System.out.print(you);
			System.out.print("이걸 왜 안 타냐");
		} else if (you == "바위") {
			yourNum = 1;
		} else {
			yourNum = 2;
		} 
		
		String scissors = "가위";
		String rock = "바위";
		String paper = "보";
		
		String yourDecision = "none";
		String computerDecision = "none";
		
		if (yourNum == 0) {
			yourDecision = scissors;
		} else if (yourNum == 1) {
			yourDecision = rock;
		} else {
			yourDecision = paper;
		}
		
		if (computer == 0) {
			computerDecision = scissors;
		} else if (computer == 1) {
			computerDecision = rock;
		} else {
			computerDecision = paper;
		}
		
		System.out.print("사용자는 " + yourDecision + "을(를) 냈고 ");
		System.out.print("컴퓨터는 " + computerDecision + "을(를) 내서 ");
				
		if (yourNum == computer) {
			System.out.println("사용자와 컴퓨터는 비겼습니다.");
		} else if (yourNum - computer == 1) {
			System.out.println("사용자가 이겼습니다.");
		} else if (yourNum - computer == -2) {
			System.out.println("사용자가 이겼습니다.");
		} else {
			System.out.println("컴퓨터가 이겼습니다.");
		}
			
		
	}
	

}